# ===========================
# AI RESUME AGENT ENVIRONMENT
# ===========================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# ============
# DATABASE
# ============
# PostgreSQL connection string
# Format: postgresql+asyncpg://username:password@host:port/database
# Default (local): postgresql+asyncpg://postgres:postgres@db:5432/resume_agent_db
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/resume_agent_db

# ============
# SECURITY
# ============
# Generate a secure random string for this
# On Mac/Linux: openssl rand -hex 32
# On Windows: [Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::GetBytes(32))
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============
# AI / LLM
# ============
# OpenAI API key for resume analysis and interview features
# Get from: https://platform.openai.com/api-keys
# Optional in dev (will disable AI features), required in production
OPENAI_API_KEY=

# LLM Provider (openai is default)
LLM_PROVIDER=openai

# ============
# PAYMENTS
# ============
# Stripe API key for subscription payments
# Get from: https://dashboard.stripe.com/apikeys
# Optional in dev (payment features disabled if missing), required for production
STRIPE_API_KEY=

# Stripe webhook secret for handling payment events
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

# ============
# FILE STORAGE
# ============
# MinIO or S3-compatible storage for resume uploads
# For local dev: minio:9000
# For AWS S3: s3.amazonaws.com
# For Render: s3.amazonaws.com
MINIO_ENDPOINT=minio:9000

# MinIO / S3 credentials
# For local MinIO (default): miniouser / miniosecret
# For AWS S3: Use IAM access key / secret
MINIO_ACCESS_KEY=miniouser
MINIO_SECRET_KEY=miniosecret

# Bucket name for storing resumes
MINIO_BUCKET=resumes

# ============
# BACKGROUND JOBS
# ============
# Redis connection for Celery message broker
# Format: redis://hostname:port/database
# Default (local): redis://redis:6379/0
CELERY_BROKER=redis://redis:6379/0
CELERY_BACKEND=redis://redis:6379/1

# ============
# OAUTH
# ============
# Google OAuth for authentication
# Create credentials at: https://console.developers.google.com
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# GitHub OAuth for authentication
# Create OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ============
# APP CONFIG
# ============
# Environment: development, staging, production
ENVIRONMENT=development

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# Enable debug mode (development only, disable in production)
DEBUG=true

